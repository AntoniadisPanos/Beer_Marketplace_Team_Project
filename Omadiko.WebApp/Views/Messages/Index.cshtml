@model IEnumerable<Omadiko.Entities.Message>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>User and Customer Messages</h3>
            </div>
            <!--<div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">-->
                    @*<div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>*@
                <!--</div>
            </div>-->
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <p>
                            @Html.ActionLink("Create New", "Create")
                        </p>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="#">Settings 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="datatable-checkbox" class="table table-striped table-bordered bulk_action">
                            <thead>
                                <tr>
                                    <th><input type="checkbox" id="check-all" class="flat"></th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MessageId)
                                    </th>
                                    <th>
                                        User Email
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Customer.CustomerFirstName)
                                    </th>
                                    
                                    <th>
                                        @Html.DisplayNameFor(model => model.UserName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Text)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.When)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <th><input type="checkbox" id="check-all" class="flat"></th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MessageId)
                                    </th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Customer.CustomerFirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Text)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.When)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.MessageId }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.MessageId }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.MessageId })
                                    </td>
                                </tr>
                                }

                            </tbody>

                           
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
