@using Omadiko.Entities;
<div class="navbar section no-padding" role="navigation">
    <!-- Heading -->
    <div class="heading">
        <div class="container">
            <div class="row">
                <div class="col-sm-4 hidden-xs">
                    <ul class="social">

                        <li><a href="~/Template/main/#" class="fa fa-instagram"></a></li>
                        <li><a href="~/Template/main/#" class="fa fa-facebook-square"></a></li>
                        <li><a href="~/Template/main/#" class="fa fa-twitter-square"></a></li>
                    </ul>
                </div>
                <div class="col-sm-8" >
                    <div class="finder">
                        <a href="@Url.Action("OurBeer","Home")">
                            <span class="fa fa-map-marker"></span> Find our beer
                        </a>
                    </div>
                    <div class="cart">
                        <a href="@Url.Action("Index","ShoppingCart")">
                            @if (Session["Cart"] != null)
                            {
                                var lista = (List<Item>)Session["Cart"];
                                int sum = 0;
                                foreach (var item in lista)
                                {
                                    sum += item.Quantity;
                                }
                            <span class="fa fa-shopping-cart">Cart @sum</span>                                
                            }
                            else
                            {
                                <span class="fa fa-shopping-cart">Empty</span>   
                            }
                            
                        </a>
                    </div>                   
                    <div class="cart">
                        <a href="#login">
                            <span class="fa fa login"></span>@Html.Partial("_LoginPartial")
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>   
    <div class="container">
        <div class="navbar-header">
            <a href="~/Template/main/index.html" class="logo" title="Craft beer landing page">
                <img src="~/Template/images/logo.png" alt="Craft Beer HTML Template">
            </a>
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar top-bar"></span>
                <span class="icon-bar middle-bar"></span>
                <span class="icon-bar bottom-bar"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse">
            <ul id="menu-primary" class="nav navbar-nav">
                <li class="active">
                    <span>
                        @Html.ActionLink("Home", "Index", "Home")
                    </span>
                </li>
                <li>
                    <span>
                        @Html.ActionLink("Beer", "Index", "Product")
                    </span>
                </li>
                <li class="dropdown">
                    <span>
                        <a href="@Url.Action("OurBeer", "Home")">Our Beer</a>
                    </span>
                  
                </li>
                <li>
                    <span>
                        @Html.ActionLink("Our Story", "OurStory", "Home")
                    </span>
                </li>
                <li>
                    <span>
                        @Html.ActionLink("Contact", "Contact", "Home")
                    </span>
                </li>
                
                <li class="dropdown">
                    <span>
                        <a href="@Url.Action("Blog","Home")">Blog</a>
                    </span>                   
                </li>
                @if (User.IsInRole("Admin") || User.IsInRole("Supervisor"))
                {
                    <li>@Html.ActionLink("Dashboard", "Index", "Admin")</li>

                }
            </ul>
        </div>
    </div>
</div>


