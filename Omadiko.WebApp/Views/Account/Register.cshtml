@model Omadiko.WebApp.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    
</head>
<body>

    <!-- Fake page loading -->
    <div id="fakeLoader"></div>

    <!-- Wrapper -->
    <div class="wrapper">
        <!-- Hero -->
        <div id="hero" class="carousel slide carousel-fade section no-padding" data-ride="carousel">

            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#hero" data-slide-to="0" class="active"></li>
                <li data-target="#hero" data-slide-to="1"></li>
                <li data-target="#hero" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">

                <div class="item active" style="background-image: url('../../Template/images/nordic-beer-markets.jpg')">
                    ;

                    <!-- Content -->
                    <div class="container">
                        <div class="row blurb scrollme animateme" data-when="exit" data-from="0" data-to="1" data-opacity="0" data-translatey="100">
                            <div class="col-md-10 col-md-offset-1">
                                <h1>Over one hundred flavours of</h1>
                                <h2>Specially <br />crafted beer</h2>
                                <a href="@Url.Action("OurBeer","Home")" class="btn btn-default">
                                    <span>Explore</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="item" style="background-image: url('../../Template/images/US-craft-beer-slows-while-spirits-take-off_wrbm_large.jpg');">
                    <!-- Content -->
                    <div class="container">
                        <div class="row blurb scrollme animateme" data-when="exit" data-from="0" data-to="1" data-opacity="0" data-translatey="100">
                            <div class="col-md-10 col-md-offset-1">
                                <h1>We use only the finest ingredients to create the</h1>
                                <h2>The perfect <br />craft beer</h2>
                                <a href="~/Template/main/#" class="btn btn-default">
                                    <span>Explore</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="item" style="background-image: url('../../Template/images/Brazil-ranked-number-2-most-innovative-craft-beer-market-Mintel.jpg');">
                    <!-- Content -->
                    <div class="container">
                        <div class="row blurb scrollme animateme" data-when="exit" data-from="0" data-to="1" data-opacity="0" data-translatey="100">
                            <div class="col-md-10 col-md-offset-1">
                                <h1>The perfect template to compliment</h1>
                                <h2>Your brewery</h2>
                                <a href="~/Template/main/#" class="btn btn-default">
                                    <span>Explore</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <!-- Section -->
        <div class="container-fluid dark section no-padding">
            <div class="container">
                <div class="row">
                    <ul class="horz-menu center-menu">
                        <li class="active"><span><a href="checkout-1.html">Login</a></span></li>
                        <li><span><a href="checkout-2.html">Billing</a></span></li>
                        <li><span><a href="checkout-3.html">Shipping</a></span></li>
                        <li><span><a href="checkout-4.html">Order info</a></span></li>
                        <li><span><a href="checkout-5.html">Payment info</a></span></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Section -->
        <div class="container-fluid white section">
            <div class="container">
                <div class="row">
                    <div class="col-sm-8 col-sm-push-2">
                        <header class="centred">
                            <h1>Register or Checkout</h1>
                            <h2>As A Guest</h2>
                        </header>
                        <hr class="space-40" />
                        <p class="centred">If you are a new customer, please, go to the Billing &amp; Shipping section.</p>
                        <hr class="space-40" />
                        <div class="login">
                            <div class="row">
                                <div class="col-md-8">
                                    <section id="loginForm">
                                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <h4>Create a new account.</h4>
                                            <hr />
                                            @Html.ValidationSummary("", new { @class = "text-danger",style="text-transform:none" })
                                    
                                            <div class="form-group">                                               
                                                <div class="col-md-10">
                                                    @Html.TextBoxFor(m => m.Email, new { @class = "login", style = "text-transform:none", placeholder = "Email-Address" })
                                                </div>
                                            </div>
                                            <div class="form-group">                                               
                                                <div class="col-md-10">
                                                    @Html.PasswordFor(m => m.Password, new { @class = "login", style = "text-transform:none", placeholder = "Password" })
                                                </div>
                                            </div>
                                            <div class="form-group">                                               
                                                <div class="col-md-10">
                                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "login", style = "text-transform:none",placeholder="Confirm Password" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-offset-2 col-md-10">
                                                    <input type="submit" class="btn btn-default" value="Register" />
                                                </div>
                                            </div>
                                        }
                                    </section>
                                </div>

                            </div>
                            @*<div class="row">
                                <div class="col-sm-12 btn-wrap">
                                    <a href="checkout-2.html" class="btn btn-default"><span>Next</span></a>
                                </div>
                            </div>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer -->


    </div>

   
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
