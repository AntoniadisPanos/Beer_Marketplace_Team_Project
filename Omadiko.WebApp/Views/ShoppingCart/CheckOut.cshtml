
@{
    ViewBag.Title = "CheckOut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
   
</head>
<body>

   

        <!-- Hero -->
        <div id="hero" class="single-page section" style="background-image: url(http://placehold.it/1500x500)">

            <!-- Content -->
            <div class="container">
                <div class="row blurb scrollme animateme" data-when="exit" data-from="0" data-to="1" data-opacity="0" data-translatey="100">
                    <div class="col-md-10 col-md-offset-1">
                        <h1>Continue to</h1>
                        <h2>Checkout</h2>
                    </div>
                </div>
            </div>

        </div>

        <!-- Section -->
        <div class="container-fluid dark section no-padding">
            <div class="container">
                <div class="row">
                    <ul class="horz-menu center-menu">
                        <li><span><a href="checkout-1.html">Login</a></span></li>
                        <li class="active"><span><a href="checkout-2.html">Billing</a></span></li>
                        <li><span><a href="checkout-3.html">Shipping</a></span></li>
                        <li><span><a href="checkout-4.html">Order info</a></span></li>
                        <li><span><a href="checkout-5.html">Payment info</a></span></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Section -->
        <div class="container-fluid white section">
            <div class="container">
                <div class="row">
                    <div class="col-sm-8 col-sm-push-2">
                        <header class="centred">
                            <h1>Enter billing</h1>
                            <h2>Details</h2>
                        </header>
                        <hr class="space-40" />
                        <!-- Form start -->
                        @using (Html.BeginForm("CheckOut", "ShoppingCart", FormMethod.Post, new { id = "Customer" }))
                        {
                            @Html.AntiForgeryToken()
                            <form>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <input type="text" placeholder="First name" name="firstname">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" placeholder="Last name" name="lastname">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <input type="text" placeholder="Company name" name="companyname">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <input type="text" placeholder="Email address" name="email">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" placeholder="Telephone" name="phone">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <select>
                                            <option>Country</option>
                                            <option>--</option>
                                            <option>United Kingdom</option>
                                            <option>France</option>
                                            <option>Italy</option>
                                            <option>Germany</option>
                                            <option>Spain</option>
                                            <option>Poland</option>
                                            <option>Turkey</option>
                                            <option>Greece</option>
                                            <option>Switzerland</option>
                                            <option>Denmark</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <input type="text" placeholder="Address line 1" name="address1">
                                        <input type="text" placeholder="Address line 2" name="address2">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <select>
                                            <option>Town / City</option>
                                            <option>--</option>
                                            <option>London</option>
                                            <option>Essex</option>
                                            <option>Manchester</option>
                                            <option>Liverpool</option>
                                            <option>Cornwall</option>
                                            <option>Birmingham</option>
                                            <option>Newcastle</option>
                                            <option>Kent</option>
                                            <option>Brighton</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <input type="text" placeholder="County" name="country">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" placeholder="Postcode" name="postcode">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <input type="checkbox"> Create account?
                                    </div>
                                </div>
                            </form>


                        <!-- Form end -->

                        <div class="row">
                            <div class="col-sm-12 btn-wrap">
                                <a href="checkout-1.html" class="btn btn-grey"><span>Previous</span></a> <a href="checkout-3.html" class="btn btn-default"><span>Next</span></a>
                            </div>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
       

  

   
</body>
</html>
